<!DOCTYPE html>
<html>
  <head>
    <title>Makeup Reviews</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<h1>Makeup Reviews</h1>


<%if !logged_in?%>
<h4><%=link_to 'Register', new_user_path%></h4>
<%end%>


<%if !logged_in?%>
 <h4><%=link_to 'Log In', login_path%><h4>
  <%end%>

  <%if logged_in?%>
  <h4><%=link_to 'Home Page', user_path(current_user.id)%></h4>
  <%end%>



  <%if logged_in?%>
   <h4><%= link_to 'Log Out', logout_path%>
<%end%>


<h4><%if !logged_in?%>
<%= link_to('Log in with Facebook!', '/auth/facebook') %>
<%end%></h4>

<%if logged_in?%>
  <%= link_to 'Makeups', makeups_path%>
  <%end%>

  <%if logged_in?%>
    <%= link_to 'My Reviews', user_reviews_path%>
    <%end%>

    <%if logged_in?%>
      <%= link_to 'Top Reviews', topreviews_path%>
      <%end%>

      <%if logged_in?%>
      <%=link_to 'New Makeup Product', new_makeup_path%>
      <%end%>



<% flash.each do |name, msg| %>
  <div class="alert alert-<%= name %>">
    <a class="close" data-dismiss="alert"></a>
    <% if msg.is_a?(String) %>
    <b> <h2> <div id="flash_<%= name %>"> <%= sanitize(msg) %> </b> </h2> </div>
    <% end %>
  </div>
<% end %>

    <%= yield %>

  </body>
</html>
