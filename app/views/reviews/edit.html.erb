<br><br>Makeup:<b> <%=@review.makeup.name%></b>
<%= form_for [@review.makeup, @review] do |f| %>
  <%= f.label 'Title' %><br>
  <%= f.text_field :title %><br>

  <%= f.label 'Content' %><br>
  <%= f.text_area :content %><br>

  <%= f.label 'Rating' %><br>
  <%= f.select :rating, ['5', '4', '3', '2', '1']%><p>

    <% f.label :recommendation%>
    Recommendation: <%= f.check_box :recommendation %> <br />



  <%= f.submit "Edit Review" %>
<% end %>
